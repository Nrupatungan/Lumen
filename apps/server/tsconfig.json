{
  "extends": "@repo/typescript-config/base",
  "compilerOptions": {
    "rootDir": "src",
    "outDir": "dist",
    "noEmit": false,
    "module": "nodenext",
    "moduleResolution": "nodenext",
    "esModuleInterop": true,
    "resolveJsonModule": true,
    "types": ["./types.d.ts"]
  },

  "include": ["src/**/*"],
  "exclude": ["node_modules", "dist", "coverage", "logs"]
}
