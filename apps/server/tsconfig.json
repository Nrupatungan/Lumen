{
  "extends": "@repo/typescript-config/base",
  "compilerOptions": {
    "rootDir": "src",
    "outDir": "dist",
    "noEmit": false,
    "module": "nodenext",
    "moduleResolution": "nodenext",
    "esModuleInterop": true,
    "resolveJsonModule": true
  },
  "include": ["src/types/**/*.d.ts", "src/**/*", "./express.d.ts"],
  "exclude": ["node_modules", "dist", "coverage", "logs"]
}
